extends home

block content

	.row
		.col-lg-6.col-lg-offset-1
			.row
				h1 #{userInfo.nowProject} 工程进度
				.progress
						.progress-bar(role="progressbar" aria-valuenow=userInfo.progress aria-valuemax="100" aria-valuemin="0" style="width: "+userInfo.progress.toString()+"%;" )
			.row
			.row
		.col-lg-4
			if userInfo
				.thumbnail
					.row
						.col-lg-4.col-lg-offset-4
							img(src=userInfo.avatar)
					.caption.text-center
						h3 #{userInfo.name}
						p 部门: #{userInfo.group}
						p 性别: #{userInfo.gender=1?'男':'女'}
						p 留言：#{userInfo.message}

						a.btn.btn-primary(role="button", href="/edit/user/info") Edit


